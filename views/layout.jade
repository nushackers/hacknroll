doctype 5
html
  head
    title hack&amp;roll by NUS Hackers
    
    //- styles
    block styles
        //- font
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600', rel='stylesheet', type='text/css')

        - if (typeof(env) === 'undefined' || (typeof(env) !== 'undefined' && env == "prod")) {
            link(rel='stylesheet', href='/css/main.css')
        - } else {
            link(rel='stylesheet/less', href='/css/main.less')
        - }
        
        - if (typeof(env) !== 'undefined' && env != "prod") {
            script(src='/js/libs/less.js')
        - }

        //- fb meta tags
        meta(property="og:image", content="http://hacknroll.nushackers.org/img/hacknrolllogo_fb.png")
        meta(property="og:site_name", content="hack&roll by NUS Hackers")
        meta(name="description", content="A 24h hackathon organised by NUS Hackers")
                
  body
    block content
    block scripts